{% if section.settings.style == "circle" %}



<div class="bg-white">
  <div class="max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
    <h2 class="sr-only">Products</h2>
    <div class="relative mb-10">
      <h2 class="text-center text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">{{section.settings.title}}</h2>
      <p class="mt-4 max-w-3xl mx-auto text-center text-base text-gray-500">
        {{ section.settings.sub_title }}
      </p>
    </div>
    <div class="grid max-w-3xl lg:max-w-5xl m-auto gap-y-10 grid-cols-2 gap-x-12 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-16">

      {% for block in section.blocks %}
        <a href="{{block.settings.url}}" class="group text-center">
          <div class="w-full aspect-w-1 aspect-h-1 bg-gray-200 rounded-full overflow-hidden">
            <img
              srcset="{%- if block.settings.image.width >= 375 -%}{{ block.settings.image | img_url: '375x' }} 375w,{%- endif -%}
                {%- if block.settings.image.width >= 750 -%}{{ block.settings.image | img_url: '750x' }} 750w,{%- endif -%}
                {%- if block.settings.image.width >= 1100 -%}{{ block.settings.image | img_url: '1100x' }} 1100w,{%- endif -%}
                {%- if block.settings.image.width >= 1500 -%}{{ block.settings.image | img_url: '1500x' }} 1500w,{%- endif -%}
                {%- if block.settings.image.width >= 1780 -%}{{ block.settings.image | img_url: '1780x' }} 1780w,{%- endif -%}
                {%- if block.settings.image.width >= 2000 -%}{{ block.settings.image | img_url: '2000x' }} 2000w,{%- endif -%}
                {%- if block.settings.image.width >= 3000 -%}{{ block.settings.image | img_url: '3000x' }} 3000w,{%- endif -%}
                {%- if block.settings.image.width >= 3840 -%}{{ block.settings.image | img_url: '3840x' }} 3840w,{%- endif -%}
                {{ block.settings.image | img_url: 'master' }} {{ block.settings.image.width }}w"
              sizes="100vw"
              src="{{ block.settings.image | img_url: '500x' }}"
              loading="lazy"
              class="w-full h-full object-center object-cover group-hover:opacity-75"
              alt="{{ block.settings.image.alt | escape }}"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.width | divided_by: block.settings.image.aspect_ratio }}"
            >
          </div>
          <h3 class="mt-4 text-sm text-gray-700">{{block.settings.title}}</h3>
        </a>
      {% endfor %}
 
      <!-- More products... -->
    </div>
  </div>
</div>

{% else %}

<!-- This example requires Tailwind CSS v2.0+ -->
<div class="bg-white">
  <div class="max-w-full mx-auto">
    <!-- <p class="text-center text-base font-semibold uppercase text-gray-600 tracking-wider">Looking for other products? We create exhaust systems for numerous cars.</p> -->

    <div class="bg-gray-800 relative pb-10 pt-10">
      <h2 class="text-center text-3xl leading-8 font-extrabold tracking-tight text-white sm:text-4xl">{{section.settings.title}}</h2>
      <p class="mt-4 max-w-3xl mx-auto text-center text-base text-white">
        {{ section.settings.sub_title }}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-0.5 lg:grid-cols-3">
      {% for block in section.blocks %}
        <div class="col-span-1 flex justify-around items-center py-16 px-4 bg-gray-50">
          <div>
            <h3 class="font-bold text-xl pb-0">{{block.settings.title}}</h3>
            <p class="text-xs">{{block.settings.sub_title}}</p>
            <a href="{{block.settings.url}}" class="inline-block bg-lightPrimaryBlue border border-transparent py-1.5 px-4 text-sm font-medium text-white hover:bg-gray-900">SHOP NOW</a>
          </div>
       
          <img
          srcset="{%- if block.settings.image.width >= 375 -%}{{ block.settings.image | img_url: '375x' }} 375w,{%- endif -%}
            {%- if block.settings.image.width >= 750 -%}{{ block.settings.image | img_url: '750x' }} 750w,{%- endif -%}
            {%- if block.settings.image.width >= 1100 -%}{{ block.settings.image | img_url: '1100x' }} 1100w,{%- endif -%}
            {%- if block.settings.image.width >= 1500 -%}{{ block.settings.image | img_url: '1500x' }} 1500w,{%- endif -%}
            {%- if block.settings.image.width >= 1780 -%}{{ block.settings.image | img_url: '1780x' }} 1780w,{%- endif -%}
            {%- if block.settings.image.width >= 2000 -%}{{ block.settings.image | img_url: '2000x' }} 2000w,{%- endif -%}
            {%- if block.settings.image.width >= 3000 -%}{{ block.settings.image | img_url: '3000x' }} 3000w,{%- endif -%}
            {%- if block.settings.image.width >= 3840 -%}{{ block.settings.image | img_url: '3840x' }} 3840w,{%- endif -%}
            {{ block.settings.image | img_url: 'master' }} {{ block.settings.image.width }}w"
          sizes="100vw"
          src="{{ block.settings.image | img_url: '1500x' }}"
          loading="lazy"
          class="h-auto w-[175px]"
          alt="{{ block.settings.image.alt | escape }}"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.width | divided_by: block.settings.image.aspect_ratio }}"
        >
       
      
       
        </div>
      {% endfor %}
   
    </div>
  </div>
</div>
{% endif %}


{% schema %}
{
  "name": "t:sections.featured-collection.name",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Featured collection",
      "label": "t:sections.featured-collection.settings.title.label"
    },
    {
      "type": "text",
      "id": "sub_title",
      "default": "Featured collection Sub Title",
      "label": "Sub Title"
    },
    {
      "type": "select",
      "id": "style",
      "options": [
        {
          "value": "circle",
          "label": "Circle Layout"
        },
        {
          "value": "grid",
          "label": "Grid Layout"
        }
      ],
      "default": "circle",
      "label": "Layout of collections"
    }
  ],
  "blocks": [
    { 
      "type": "featured-item",
      "name": "Featured Item",
      "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "Featured Title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "sub_title",
        "default": "Featured Sub Title",
        "label": "Title (Only applies to grid layout)"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Featured Image"
      },
      {
        "type": "url",
        "id": "url",
        "label": "URL"
      }
      ]  
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured-collection.presets.name"
    }
  ]
}
{% endschema %}
