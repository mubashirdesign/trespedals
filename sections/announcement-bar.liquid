

  <div class="text-center relative text-xs md:text-sm w-full overflow-hidden" style="background-color: {{section.settings.bg_color}}; color: {{ section.settings.text_color }}">
    <announcement-bar class="block w-full">
      <div class="swiper-wrapper w-full">
        {%- for block in section.blocks -%}
          <div class="swiper-slide w-full cursor-pointer flex items-center justify-center py-2">{%- if block.settings.text != blank -%} {{ block.settings.text | escape }} {%- endif -%}</div>
        {%- endfor -%}
        
      </div>
    </announcement-bar>
  </div>


{% schema %}
{
  "name":"t:sections.announcement-bar.name",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#003DA5"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#fff"
    }
  ],
  "blocks": [
    {
      "name": "content",
      "type": "announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Free 2-3 Day Shipping on 2 Cases or More"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement",
      "category": "Text",
      "blocks": [
        {
          "type": "announcement"
        },
        {
          "type": "announcement"
        },
        {
          "type": "announcement"
        }
      ]
    }
  ]
}
{% endschema %}

