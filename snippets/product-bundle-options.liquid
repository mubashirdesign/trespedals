<product-bundle-options id="product-bundle-options-{{forloop}}" index="{{forloop}}" class="hidden relative z-10" role="dialog" aria-modal="true">
    <!--
      Background backdrop, show/hide based on modal state.

      Entering: "ease-out duration-300"
        From: "opacity-0"
        To: "opacity-100"
      Leaving: "ease-in duration-200"
        From: "opacity-100"
        To: "opacity-0"
    -->
    <div class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity md:block"></div>

    <div class="fixed z-10 inset-0 overflow-y-auto">
      <div class="overlay flex items-stretch md:items-center justify-center min-h-full text-center md:px-2 lg:px-4">
        <!-- This element is to trick the browser into centering the modal contents. -->
        <span class="hidden md:inline-block md:align-middle md:h-screen" aria-hidden="true">&#8203;</span>

        <!--
          Modal panel, show/hide based on modal state.

          Entering: "ease-out duration-300"
            From: "opacity-0 translate-y-4 md:translate-y-0 md:scale-95"
            To: "opacity-100 translate-y-0 md:scale-100"
          Leaving: "ease-in duration-200"
            From: "opacity-100 translate-y-0 md:scale-100"
            To: "opacity-0 translate-y-4 md:translate-y-0 md:scale-95"
        -->
        <div class="flex text-base text-left transform transition w-full md:max-w-2xl md:px-4 md:my-8 lg:max-w-4xl">
          <div class="w-full relative flex items-center bg-white px-4 pt-14 pb-8 overflow-hidden shadow-2xl sm:px-6 sm:pt-8 md:p-6 lg:p-8">
            <button type="button" class="close absolute top-4 right-4 text-gray-400 hover:text-gray-500 sm:top-8 sm:right-6 md:top-6 md:right-6 lg:top-8 lg:right-8">
              <span class="sr-only">Close</span>
              <!-- Heroicon name: outline/x -->
              <svg class="h-6 w-6 close" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>

            <div class="w-full grid grid-cols-1 gap-y-8 gap-x-6 items-start sm:grid-cols-12 lg:items-center lg:gap-x-8">
              <div class="aspect-w-2 aspect-h-3 rounded-lg bg-gray-100 overflow-hidden sm:col-span-4 lg:col-span-5">
                <image srcset="{{ collection.products[0].featured_image.src | img_url: '450x' }} 450w, {{ collection.products[0].featured_image.src | img_url: '630x' }} 630w" src="{{ collection.products[0].featured_image.src | img_url: '630x' }}" src-placeholder="{{ collection.products[0].featured_image.src | img_url: '50x' }}" alt="{{ block.settings.feature_collection.products[0].featured_image.alt | escape }}" class="option-image object-center object-cover">

              </div>
              <div class="sm:col-span-8 lg:col-span-7">
                <h2 class="option-title text-xl font-medium text-gray-900 sm:pr-12">{{ collection.products[0].title }}</h2>

                <section aria-labelledby="information-heading" class="mt-1">
                  <h3 id="information-heading" class="sr-only">Product information</h3>

                  <p class="price font-medium text-gray-900">{{collection.products[0].price | money}}</p>

              
                </section>

                <section aria-labelledby="options-heading" class="mt-8">
                  <h3 id="options-heading" class="sr-only">Product options</h3>

                
                    <!-- Size picker -->
                    <div class="mt-8">
                      <div class="flex items-center justify-between">
                        <h4 class="text-sm font-medium text-gray-900 pb-0">Change Option</h4>
                        <a href="{{collection.url}}" class="text-sm font-medium text-indigo-600 hover:text-indigo-500">View All</a>
                      </div>

                      <select class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-2 border-solid border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                        {% for product in collection.products %}
                        <option value="{{product.handle}}">{{product.title}}</option>
                        {% endfor %}
                      </select>

                    </div>

                    <button class="option-update mt-8 w-full bg-indigo-600 border border-transparent rounded-md py-3 px-8 flex items-center justify-center text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Update Selection</button>

                    <p class="absolute top-4 left-4 text-center sm:static sm:mt-4">
                      <a href="{{ collection.products[0].url }}" class="font-medium text-indigo-600 hover:text-indigo-500">View full details</a>
                    </p>
                </section>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </product-bundle-options>
