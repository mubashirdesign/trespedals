<product-bundle-options id="product-bundle-options-{{forloop}}" index="{{forloop}}" class="hidden relative z-10" role="dialog" aria-modal="true">
    <!--
      Background backdrop, show/hide based on modal state.

      Entering: "ease-out duration-300"
        From: "opacity-0"
        To: "opacity-100"
      Leaving: "ease-in duration-200"
        From: "opacity-100"
        To: "opacity-0"
    -->
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity block"></div>

    <div class="fixed z-10 inset-0 overflow-y-auto">
      <div class="overlay flex items-center justify-center min-h-full text-center px-2 lg:px-4">
        <!-- This element is to trick the browser into centering the modal contents. -->
        <span class="hidden md:inline-block md:align-middle md:h-screen" aria-hidden="true">&#8203;</span>

        <!--
          Modal panel, show/hide based on modal state.

          Entering: "ease-out duration-300"
            From: "opacity-0 translate-y-4 md:translate-y-0 md:scale-95"
            To: "opacity-100 translate-y-0 md:scale-100"
          Leaving: "ease-in duration-200"
            From: "opacity-100 translate-y-0 md:scale-100"
            To: "opacity-0 translate-y-4 md:translate-y-0 md:scale-95"
        -->
        <div class="flex text-base text-left transform transition w-full max-w-2xl px-4 my-8 lg:max-w-4xl">
          <div class="w-full relative flex items-center bg-gray-900 px-4 pt-14 pb-8 overflow-hidden shadow-2xl sm:px-6 sm:pt-8 md:p-6 lg:p-8 rounded-md">
            <button type="button" class="close absolute top-4 right-4 text-gray-400 hover:text-gray-500 sm:top-8 sm:right-6 md:top-6 md:right-6 lg:top-8 lg:right-8">
              <span class="sr-only">Close</span>
              <!-- Heroicon name: outline/x -->
              <svg class="h-6 w-6 close" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>

            {% if block.settings.enable_checkbox != false %}
            <div class="w-full grid gap-y-8 gap-x-6 grid-cols-12 items-center lg:gap-x-8">
              <div class="aspect-w-3 aspect-h-2 sm:aspect-w-2 sm:aspect-h-3 rounded-lg bg-gray-100 overflow-hidden col-span-12 lg:col-span-5">
                <image srcset="{{ collection.products[0].featured_image.src | img_url: '450x' }} 450w, {{ collection.products[0].featured_image.src | img_url: '630x' }} 630w" src="{{ collection.products[0].featured_image.src | img_url: '630x' }}" src-placeholder="{{ collection.products[0].featured_image.src | img_url: '50x' }}" alt="{{ block.settings.feature_collection.products[0].featured_image.alt | escape }}" class="option-image object-center object-cover">

              </div>
              <div class="col-span-12 lg:col-span-7">
                <h2 class="option-title text-sm md:text-xl font-medium text-white sm:pr-12">{{ collection.products[0].title }}</h2>

                <section aria-labelledby="information-heading" class="mt-1">
                  <h3 id="information-heading" class="sr-only">Product information</h3>

                  <p class="price font-medium text-white">{{collection.products[0].price | money}}</p>

              
                </section>

                <section aria-labelledby="options-heading" class="mt-8">
                  <h3 id="options-heading" class="sr-only">Product options</h3>

                
                    <!-- Size picker -->
                    <div class="mt-8">
                      <div class="flex items-center justify-between">
                        <h4 class="text-sm font-medium text-gray-900 pb-0">Change Option</h4>
                        <a href="{{collection.url}}" class="text-sm font-medium text-white hover:text-primaryRed">View All</a>
                      </div>

                      <select class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-2 border-solid border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                        {% for product in collection.products %}
                        <option value="{{product.handle}}">{{product.title}}</option>
                        {% endfor %}
                      </select>

                    </div>

                    <button class="option-update mt-4 w-full bg-primaryRed border border-transparent rounded-md py-3 px-8 flex items-center justify-center text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Update Selection</button>

                    <p class="absolute top-4 left-4 text-center sm:static sm:mt-4">
                      <a href="{{ collection.products[0].url }}" class="font-medium text-white hover:text-indigo-500">View full details</a>
                    </p>
                </section>
              </div>
            </div>
            {% else %}
            <!-- This example requires Tailwind CSS v2.0+ -->
                <div class="bg-white">
                  <div class="mx-auto max-w-2xl py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
                    <h2 class="text-xl font-bold text-gray-900">Customers also bought</h2>

                    <div class="mt-8 grid grid-cols-1 gap-y-12 sm:grid-cols-2 sm:gap-x-6 lg:grid-cols-4 xl:gap-x-8">
                      <div>
                        <div class="relative">
                          <div class="relative h-72 w-full overflow-hidden rounded-lg">
                            <img src="https://tailwindui.com/img/ecommerce-images/product-page-03-related-product-01.jpg" alt="Front of zip tote bag with white canvas, black canvas straps and handle, and black zipper pulls." class="h-full w-full object-cover object-center">
                          </div>
                          <div class="relative mt-4">
                            <h3 class="text-sm font-medium text-gray-900">Zip Tote Basket</h3>
                            <p class="mt-1 text-sm text-gray-500">White and black</p>
                          </div>
                          <div class="absolute inset-x-0 top-0 flex h-72 items-end justify-end overflow-hidden rounded-lg p-4">
                            <div aria-hidden="true" class="absolute inset-x-0 bottom-0 h-36 bg-gradient-to-t from-black opacity-50"></div>
                            <p class="relative text-lg font-semibold text-white">$140</p>
                          </div>
                        </div>
                        <div class="mt-6">
                          <a href="#" class="relative flex items-center justify-center rounded-md border border-transparent bg-gray-100 py-2 px-8 text-sm font-medium text-gray-900 hover:bg-gray-200">Add to bag<span class="sr-only">, Zip Tote Basket</span></a>
                        </div>
                      </div>

                      <!-- More products... -->
                    </div>
                  </div>
                </div>

            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </product-bundle-options>
